{
  "sqltools.connections": [
    {
      "connectionTimeout": 15,
      "mssqlOptions": {
        "appName": "SQLTools",
        "useUTC": true,
        "encrypt": true,
        "trustServerCertificate": true
      },
      "previewLimit": 50,
      "server": "database-3.c67ymu6q22o1.us-east-1.rds.amazonaws.com",
      "port": 1433,
      "driver": "MSSQL",
      "name": "SigmaTB_AWS",
      "database": "SigmaTB",
      "username": "admin"
    }
  ],

  "editor.tabCompletion": "off",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.inlineSuggest.enabled": false,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.hover.enabled": false,
  "editor.fontSize": 18,
  "editor.fontFamily": "Consolas, 'Courier New', monospace",

  "editor.tokenColorCustomizations": {
      //--------------FUNCTIONS---------------------------------
    "textMateRules": [
      {
        "scope": "entity.name.function.python",
        "settings": {
          "foreground": "#f97e7a",  // Soft yellow
          "fontStyle": "bold"
        }
      },
      {
        //--------------FUNCTIONS---------------------------------
        "scope": "keyword.control.python",
        "settings": {
          "foreground": "#66D9EF",  // Soft cyan
          "fontStyle": "bold"
        }
      },
      {
        //--------------FUNCTIONS---------------------------------
        "scope": [
          "string.quoted.single.python",
          "string.quoted.double.python"
        ],
        "settings": {
          "foreground": "#ab455e",  // Soft red/pink
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "comment.line.number-sign.python",
          "string.quoted.docstring.multi.python"
        ],
        "settings": {
          "foreground": "#4b6b0c",  // Greenish comment
          "fontStyle": "italic"
        }
      },
      {
        "scope": "variable.other.readwrite.python",
        "settings": {
          "foreground": "#0f0f0f"  // Classic light gray for variables
        }
      },
      {
        "scope": [
          "punctuation.section.mapping.begin.python",
          "punctuation.section.mapping.end.python",
          "punctuation.section.brackets.begin.python",
          "punctuation.section.brackets.end.python"
        ],
        "settings": {
          "foreground": "#7a5833"  // Warm orange for punctuation
        }
      }
    ]
  },

    /**-----------------WORKBENCH---------------*/
  "workbench.colorCustomizations": {
    "editor.background": "#0f0f0f",                // Dark gray background
    "editor.foreground": "#7e7777",                // Soft text color
    "editorLineNumber.foreground": "#858585",
    "editorCursor.foreground": "#FFCC00",          // Yellowish cursor
    "editorIndentGuide.background1": "#2d2d2d",
    "editorIndentGuide.activeBackground1": "#555555",

    /**-----------------TAB---------------*/
    "tab.activeBackground": "#6d8fde",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveBackground": "#1e1e1e",
    "tab.inactiveForeground": "#888888",
    "tab.border": "#3c3c3c",

  /**-----------------DEBUG---------------*/
    "debugToolBar.background": "#2d2d30",
    "debugIcon.startForeground": "#A6E22E",
    "debugIcon.stopForeground": "#FF6188",
    "debugIcon.pauseForeground": "#FFD866",
    "debugIcon.restartForeground": "#66D9EF",
    "debugIcon.stepOverForeground": "#66D9EF",
    "debugIcon.stepIntoForeground": "#66D9EF",
    "debugIcon.stepOutForeground": "#66D9EF",

    /**-----------------LINE OF PATH---------------*/
    "breadcrumb.background": "#1c687f",
    "breadcrumb.foreground": "#bbbbbb",
    "breadcrumb.activeSelectionForeground": "#ffffff",
    "breadcrumb.focusForeground": "#66D9EF",

    /*------------------DEBUG---------------------*/
    "debug.stopOnEntry": false,
    "debug.internalConsoleOptions": "neverOpen",
    "python.terminal.launchArgs": [],
    "debug.toolBarLocation": "docked",
    "python.breakOnSystemExitZero": false

  },
  "debug.exceptionOptions": {
    "breakOnSystemExitZero": false,
    "uncaughtExceptions": false,
    "raisedExceptions": false
  },
  "python.terminal.launchArgs": [],
  "debug.internalConsoleOptions": "neverOpen",

  "window.zoomLevel": 1.25

}
